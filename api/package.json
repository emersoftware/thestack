{
  "name": "the-stack-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "npm run db:migrate && wrangler deploy",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply the-stack-db --remote",
    "db:migrate:local": "wrangler d1 migrations apply the-stack-db --local",
    "db:seed:local": "wrangler d1 execute the-stack-db --local --file=./scripts/seed-dev.sql",
    "db:reset:local": "rm -rf .wrangler/state && npm run db:migrate:local && npm run db:seed:local"
  },
  "dependencies": {
    "better-auth": "^1.4.5",
    "drizzle-orm": "^0.38.0",
    "hono": "^4.6.0",
    "resend": "^6.5.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241230.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "drizzle-kit": "^0.30.0",
    "eslint": "^9.0.0",
    "typescript": "^5.7.0",
    "wrangler": "^4.54.0"
  }
}
